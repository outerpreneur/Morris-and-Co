<div id="template" class="small-form" data-cc-animate>
  <div class="template_header">
    <h2 class="title">{{ 'customer.activate_account.title' | t }}</h2>
    <p class="note">{{ 'customer.activate_account.subtext' | t }}</p>
  </div>

  {% form 'activate_customer_password' %}
    {{ form.errors | default_errors }}

    <div id="password" class="input-row">
      <label class="large" for="password">{{ 'customer.activate_account.password' | t }}</label>
      <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
    </div>
    <div id="password_confirm" class="input-row">
      <label class="large" for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
    </div>
    <div class="action_bottom">
      <p>
        <input class="btn" type="submit" value="{{ 'customer.activate_account.submit' | t }}" />
      </p>
      <input type="submit" class="cancel" name="decline" id="customer_decline" value="{{ 'customer.activate_account.cancel' | t }}" />
    </div>
  {% endform %}
</div>
